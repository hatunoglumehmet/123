    <string id="edw_trade_fed_short" text="ETF" />
    <string id="edw_trade_fed_desc" text="A powerful federation of merchants controlling trade routes across the continent. They excel in commerce and have well-equipped armies funded by their vast wealth." />
    
    <string id="edw_north_alliance" text="Northern Clans Alliance" />
    <string id="edw_north_alliance_short" text="NCA" />
